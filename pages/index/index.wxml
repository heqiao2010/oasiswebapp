<!--index.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">欢迎{{userInfo.nickName}}光临！</text>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
  <view style="display: flex; flex-direction: row;">
    <button type="primary" class="index-button" bindtap="bindCheckTap">Wi-Fi检测</button>
    <button type="primary" class="index-button" bindtap="autoLoginTap">免认证表项</button>
  </view>
  <view style="display: flex; flex-direction: row;">
    <button type="default" open-type="contact" class="index-button">意见反馈</button>
    <button type="default" class="index-button" bindtap="bindGameTap">小游戏</button>
  </view>
</view>
